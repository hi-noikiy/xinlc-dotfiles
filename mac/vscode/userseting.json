{
    "explorer.confirmDragAndDrop": false,
    "editor.tabSize": 2,
    "editor.fontSize": 18, // 使用guides 插件代替
    "workbench.iconTheme": "material-icon-theme",
    "editor.minimap.enabled": false,
    // "typescript.check.tscVersion": false,
    "vsicons.projectDetection.autoReload": true,
    "editor.cursorBlinking": "solid",
    "editor.renderControlCharacters": false,
    "editor.lineNumbers": "relative",
    // vim
    // "vim.enableNeovim": true,
    // "vim.useSolidBlockCursor": false, // 开启后很卡
    "vim.overrideCopy": false,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": false,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "leader",
                "w"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "leader",
                "q"
            ],
            "commands": [
                {
                    "command": ":tabc"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "/"
            ],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "j"
            ],
            "commands": [
                {
                    "command": ":tabp"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "k"
            ],
            "commands": [
                {
                    "command": ":tabn"
                }
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "k",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "y"
            ],
            "after": [
                "\"",
                "+",
                "y"
            ]
        },
        {
            "before": [
                "<leader>",
                "p"
            ],
            "after": [
                "\"",
                "+",
                "p"
            ]
        },
        {
            "before": [
                "<leader>",
                "1"
            ],
            "commands": [
                {
                    "command": ":tabn1"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "2"
            ],
            "commands": [
                {
                    "command": ":tabn2"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "3"
            ],
            "commands": [
                {
                    "command": ":tabn3"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "4"
            ],
            "commands": [
                {
                    "command": ":tabn4"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "0"
            ],
            "commands": [
                {
                    "command": ":tablast"
                }
            ]
        }
    ],
    // "vim.statusBarColorControl": true,
    // "vim.statusBarColors" : {
    //     "normal": "#005f5f",
    //     "insert": "#5f0000",
    //     "visual": "#5f00af",
    //     "visualline": "#005f87",
    //     "visualblock": "#86592d",
    //     "replace": "#000000"
    // },
    "terminal.external.osxExec": "iTerm.app",
    "typescript.check.npmIsInstalled": false,
    // "vim.disableAnnoyingNeovimMessage": true,
    "vim.searchHighlightColor": "rgba(255, 0, 0, 0.8)",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.activityBar.visible": true,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.js": "javascript"
    },
    "extensions.autoUpdate": false,
    // "update.channel": "none",
    "javascript.validate.enable": false,
    "vsicons.dontShowNewVersionMessage": true,
    "files.autoSave": "off",
    "go.gopath": "/Users/leo/go",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "typescript",
            "autoFix": true
        },
        {
            "language": "typescriptreact",
            "autoFix": true
        },
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "px2vworvh.width": 3840,
    "px2vworvh.height": 720,
    "px2vw.width": 3840,
    "config.baseWidth": 3840,
    "px-to-vw.unitPrecision": 4,
    "px-to-vw.viewportWidth": 3840,
    "tabnine.experimentalAutoImports": true,
    "hediet.vscode-drawio.theme": "Kennedy",
    "workbench.colorTheme": "Community Material Theme",
    "workbench.editor.untitled.hint": "hidden",
    "appworks.materialSources": [],
    "vscode-office.autoTheme": true,
    "workbench.editorAssociations": {
        "*.md": "default"
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "editor.guides.indentation": false,
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hant": true,
        "zh-hans": true
    },
    "editor.unicodeHighlight.allowedCharacters": {
        "－": true
    },
    "terminal.integrated.macOptionIsMeta": true    // 避免终端 alt 键输入特殊字符
}